<Window x:Class="FinanceDashboard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FinanceDashboard.ViewModels"
        mc:Ignorable="d"
        Title="{Binding AppName}"
        Height="450"
        Width="800">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="{Binding WelcomeMessage}"
                   Grid.Row="0"
                   FontSize="24" 
                   HorizontalAlignment="Center"/>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding Transactions}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}" Width="150"/>
                        <TextBlock Text="{Binding Amount, StringFormat='{}{0:C}'}" Width="150"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
    
</Window>